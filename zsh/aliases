#!/bin/sh

alias grep='rg --color=auto'

alias ls='ls --color=auto'
alias ll='ls -lav --ignore=..'   # show long listing of all except ".."
alias la='ls -a --ignore=..'   # show listing of all except ".."
alias l='ls -a --ignore=..'   

alias nv='nvim'
alias v='nvim'
alias vim='nvim'
alias e='nvim'
alias emacs='nvim'
alias :q="exit"
alias :x="exit"

alias tm="tmux -2 attach-session || tmux -2 new-session"
alias sc="screen -r || screen"
alias swap="cd /Users/elias/.local/state/nvim/swap"
alias nvimServer="nvim scp://eliask@login2.untetherai.com//server/home/eliask/"
alias nvimWorks="nvim scp://eliask@login2.untetherai.com//server/projects/camden/c1/workspaces/eliask/"
alias server="ssh eliask@compute7.untetherai.com" # 192.168.64.102

toServer() {
    scp $1 eliask@login2.untetherai.com:/server/home/eliask
}

fromServer() {
    scp eliask@login2.untetherai.com:"$1" .
}

acp() {
	read "REPLY?Are you sure? [y/N] "
	if [[ $REPLY =~ ^[Yy]$ ]]; then
		if [ $# -eq 0 ]; then
			echo "No commit message"
			exit -1
		fi
		git add .
		git commit -m "$1"
		git push
		echo "Commited with message '$1'"
	fi
}

knock() {
    if [[$1 != "knock" ]]; then
        exit -1
    else
        read "Who's :xjkthere?"
    fi
}
set -o vi
neofetch
